pipeline {
    agent any
    stages {
        stage('Git Clone') { 
            steps {
                
                 git credentialsId:'c7a1c6bd-0231-4093-94c5-0c0808723b20', url: 'https://github.com/Madhubk/Testdata.git'
            }
        }
        
        
        stage('Preparation') {
            steps {
                
                bat "npm install"
                bat "npm bower install"
                bat "grunt build"

            }
        }
      
        //   stage('Build') {
        //     steps {
              
                
        //     }
        // }
      
         
   
        stage('Deploy') {
            steps {
                bat 'xcopy "C:\\Users\\Madhu\\.jenkins\\workspace\\AngularJSpipeline\\dist\\angular-tour-of-heroes" "E:\\Deploy_A3" /s/y/j'

            }
        }
    }
    post {
        always {
            echo 'Production build process pipeline has completed'
            //deleteDir() /* clean up our workspace */
        }
        success {
            echo 'Production build successful!'
        }
        unstable {
            echo 'Production build is unstable :/'
        }
        failure {
            echo 'Production build failed :('
        }
        changed {
            echo 'Build status has changed.'
        }
    }
}
